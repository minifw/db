{
    "name": "minifw/db",
    "type": "library",
    "description": "Database Tool",
    "keywords": [
        "php",
        "framework"
    ],
    "homepage": "https://github.com/minifw/db",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Yang Ming",
            "email": "yangming0116@163.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "require": {
        "php": ">=7.4",
        "minifw/common": "^1.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.5"
    },
    "scripts": {
        "test": "./vendor-bin/phpunit/vendor/bin/phpunit ."
    },
    "autoload": {
        "psr-4": {
            "Minifw\\DB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Minifw\\DB\\Test\\": "tests/"
        }
    }
}
